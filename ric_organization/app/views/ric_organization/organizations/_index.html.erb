<%= rug_index(organizations, options) do |t| %>
	<%= t.body do |b| %>
		<%= b.string :name %>
		<%= b.action :edit, modal: true do |m, organization| %>
			<%= m.header t("headers.ric_organization.organizations.edit") %>
			<%= render partial: "form", locals: {
				modal: m,
				table: t,
				organization: organization
			} %>
		<% end %>
		<%= b.action :destroy, path: :organization_path, ajax: true %>
	<% end %>
	<%= t.footer do |f| %>
		<%= f.pagination %>
		<%= f.summary %>
	<% end %>
<% end %>
