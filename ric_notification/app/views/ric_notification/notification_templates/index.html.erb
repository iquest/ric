<%= rug_index(@notification_templates) do |t| %>
	<%= t.body do |b| %>
		<%= b.enum :ref, show: { path: :notification_template_path } %>
		<%= b.string :subject %>
		<%= b.text :message, type: { strip_tags: true } %>
		<%= b.action :edit, path: :edit_notification_template_path %>
	<% end %>
	<%= t.footer do |f| %>
		<%= f.summary %>
	<% end %>
<% end %>
