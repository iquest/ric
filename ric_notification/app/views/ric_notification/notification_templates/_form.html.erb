<%= rug_form_for(notification_template, 
	update_path: :notification_template_path,
) do |f| %>
	<%= f.text_input_row :subject %>
	<%= f.text_area_row :message %>
	<%= rug_grid do |g| %>
		<%= g.row do |r| %>
			<%= r.col(6) do %>
				<%= f.checkbox_row :disabled %>
			<% end %>
			<%= r.col(6) do %>
				<%= f.checkbox_row :dry %>
			<% end %>
		<% end %>
	<% end %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
