<%= render partial: "ruth_admin/components/page_header" %>
<%= rug_show_table_for(@notification, { 
	created_at: :datetime,
	subject: :string,
	message: { type: :text, truncate: false },
	kind: :enum,
	url: :string,
	author: { type: :belongs_to, label: :name_formatted, path: "ric_user_admin.user_path" },
	done: :string,
}) %>
<h3><%= t("headers.ric_notification.admin_notifications.receivers") %></h3>
<%= rug_index_table_for(@notification.notification_receivers.order(created_at: :desc).page(params[:page]).per(50), { 
	receiver: { type: :belongs_to, label: :name_or_email },
	state: :state,
	created_at: :datetime,
	sent_at: :datetime,
	received_at: :datetime,
}, pagination: true, summary: true ) %>
