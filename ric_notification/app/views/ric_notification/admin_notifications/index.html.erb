<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_index_table_for(@notifications, { 
		created_at: :datetime,
		message: { type: :text, strip_tags: true },
		kind: :enum,
		url: :string,
		author: { type: :belongs_to, label: :name_formatted, path: "ric_user_admin.user_path" },
	}, paths: {
		show: :notification_path,
		edit: :edit_notification_path,
		destroy: :notification_path
	}, pagination: true, summary: true ) %>
<% end %>