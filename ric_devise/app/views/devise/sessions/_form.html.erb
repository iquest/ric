<%= rug_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<%= f.text_input_row :email, :email_field %>
	<%= f.text_input_row :password, :password_field %>
	<% if devise_mapping.rememberable? -%>
		<%= f.checkbox_row :remember_me %>
	<% end -%>
	<%= f.primary_button_row :submit, label: t("devise.action.sign_in") %>
	<% if devise_mapping.registerable? %>
		<%= f.link_button_row t("devise.action.sign_up").capitalize, new_registration_path(resource_name) %>
	<% end %>
	<% if devise_mapping.recoverable? %>
		<%= f.link_button_row t("devise.action.reset_password").capitalize, new_password_path(resource_name) %>
	<% end %>
<% end %>