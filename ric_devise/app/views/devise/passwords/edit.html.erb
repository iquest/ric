<%= render layout: "devise/layouts/with_right_side" do %>
	<h2><%= t("devise.action.reset_password") %></h2>
	<%= rug_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
		<%= f.hidden_field :reset_password_token %>
		<%= f.text_input_row :password, :password_field, label: t("activerecord.attributes.user.new_password") %>
		<%= f.text_input_row :password_confirmation, :password_field, label: t("activerecord.attributes.user.new_password_confirmation") %>
		<%= f.primary_button_row :submit, label: t("helpers.submit.reset") %>
	<% end %>
<% end %>
