<%= rug_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<%= f.text_input_row :email, :email_field %>
	<%= f.primary_button_row :submit, label: t("devise.passwords.new.send_instructions") %>
	<%= f.link_button_row t("devise.action.sign_in").capitalize, new_session_path(resource_name) %>
	<% if devise_mapping.registerable? %>
		<%= f.link_button_row t("devise.action.sign_up").capitalize, new_registration_path(resource_name) %>
	<% end %>
<% end %>