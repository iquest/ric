<%= rug_form_for(tag, 
	create_path: "ric_tagging.tags_path", 
	update_path: "ric_tagging.tag_path",
	ajax: {
		success_message: RicTagging.tag_model.human_notice_message(tag.new_record? ? :create : :update),
		error_message: RicTagging.tag_model.human_error_message(tag.new_record? ? :create : :update),
		clear_on_submit: tag.new_record?,
		on_success: {
			toggle_modal: { selector: "##{modal.id}" },
			reload_page: true
		}
	}
) do |f| %>
	<%= modal.body do %>
		<%= f.text_input_row :name %>
		<%= f.picker_row :color %>
	<% end %>
	<%= modal.footer do %>
		<%= f.primary_button_row :submit %>
	<% end %>
<% end %>