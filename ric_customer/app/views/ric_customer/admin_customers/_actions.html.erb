<%= rug_menu_for(@customer, options.merge(path_base: "customers")) do |m| %>
	<%= m.index_item %>
	<%= m.new_item %>
	<%= m.show_item %>
	<%= m.edit_item %>
	<%= m.destroy_item %>
	<% if action_name == "index" %>
		<%= m.item t('general.action.export_xls').upcase_first, customers_path(format: "xls"), icon: "paperclip" %>
	<% end %>
	<% if action_name == "statistic" %>
		<%= m.item t('general.action.export_xls').upcase_first, statistic_customers_path(statistic: @statistic, format: "xls"), icon: "paperclip" %>
	<% end %>
<% end %>
