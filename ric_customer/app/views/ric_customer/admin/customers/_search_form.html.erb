<% if !@search_customer.class.search_columns.empty? %>
	<%= gumby_form_for(@search_customer, url: index_search_admin_customers_path) do |f| %>
		<% @search_customer.class.search_columns.each do |column| %>
			<% 
				column_spec = @search_customer.class.search_column_spec(column)
				form_method = ( column_spec[:form_method] ? column_spec[:form_method].to_sym : :text_field )
				form_method_params = [column].concat( column_spec[:form_method_params] ? column_spec[:form_method_params] : [] )
			%>
			<%= f.method(form_method).call(*form_method_params) %>
		<% end %>
		<%= f.primary_button_row :submit, label: t("helpers.submit.search", default: "Search").capitalize %>
	<% end %>
<% end %>