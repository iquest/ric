<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_show_table_for(@newie, {
		title: :string,
		perex: :text,
		content: :text,
		published_at: :datetime
	}) %>
	<h3><%= t("headers.ric_journal.admin_newies.pictures") %></h3>
	<%= rug_picture_index_table_for(@newie.newie_pictures.order(position: :asc), { 
		picture: { type: :picture, thumb_style: :thumb },
		title: :string,
	}, paths: {
		show: "ric_journal_admin.newie_picture_path",
		edit: "ric_journal_admin.edit_newie_picture_path",
		destroy: "ric_journal_admin.newie_picture_path"
	}) %>
<% end %>