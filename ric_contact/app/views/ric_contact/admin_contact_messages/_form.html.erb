<%= rug_form_for(@contact_message, 
	create_path: :contact_messages_path, 
	update_path: :contact_message_path
) do |f| %>
	<%= f.text_input_row :name, :text_field %>
	<%= f.text_input_row :email, :email_field %>
	<%= f.text_area_row :message %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>