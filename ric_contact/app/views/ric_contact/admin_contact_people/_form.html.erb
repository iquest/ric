<%= rug_form_for(@contact_person, create_url: :contact_people_path, update_url: :contact_person_path) do |f| %>
	<%= f.name_row :name, title: true %>
	<%= f.text_input_row :role, :text_field, localization: (RicContact.localization == true) %>
	<%= f.text_input_row :phone %>
	<%= f.text_input_row :email %>
	<% if RicContact.contact_person_model.config(:photo_croppable) == true %>
		<%= f.dropzone_row :photo, crop: true %>
		<%= f.crop_row :photo %>
	<% else %>
		<%= f.dropzone_row :photo %>
	<% end %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
