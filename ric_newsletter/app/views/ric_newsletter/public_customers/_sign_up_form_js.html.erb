<%= javascript_tag do %>
	function newsletter_sign_up_ready()
	{
		$("form.newsletter-sign-up").each(function() {
			var form = $(this);

			form.find("input[type='submit']").on("click", function(e) {
				e.preventDefault();

				// URL
				var url = form.attr("action");

				// Request
				$.ajax({
					url: url,
					dataType: "json",
					type: "POST",
					data: form.serialize(),

					// Success data fetch
					success: function(callback) 
					{
						form.find(".flash-canvas").html("");
						if (callback === true) {
							form.find("input.form-control").val("");
							form.find(".flash-canvas").html("<%= I18n.t("activerecord.notices.models.#{RicNewsletter.customer_model.model_name.i18n_key}.newsletter_sign_up") %>");
						} else {
							form.find(".flash-canvas").html("<%= I18n.t("activerecord.errors.models.#{RicNewsletter.customer_model.model_name.i18n_key}.newsletter_sign_up") %>");
						}
					},
					
					// Error data fetch
					error: function(callback) 
					{
					}
				});

			});
		});
	}
	$(document).ready(newsletter_sign_up_ready);
<% end %>