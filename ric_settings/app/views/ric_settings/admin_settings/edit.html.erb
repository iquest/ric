<%= rug_form_for(@settings_collection, url: settings_path, method: :put) do |f| %>
	<% tabs = rug_tabs %>
	<% @settings_collection.categories.each_with_index do |(category, settings), index| %>
		<% tabs.tab category.to_sym, t("activerecord.attributes.ric_settings/settings_collection.category_values.#{category}") do %>
			<% settings.each do |setting_key| %>
				<%= f.generic_row setting_key, @settings_collection.settings[setting_key.to_sym][:kind] %>
			<% end %>
		<% end %>
	<% end %>
	<%= tabs.render(header_style: "pills", header_class: "hr-divider-content hr-divider-nav", header_container_class: "hr-divider") %>
	<%= f.primary_button_row :submit, t("helpers.submit.update") %>
	<%= f.back_link_button_row %>
<% end %>
