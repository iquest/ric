<%= rug_tabs(
	header_style: "pills", 
	header_class: "hr-divider-content hr-divider-nav", 
	header_container_class: "hr-divider"
) do |t| %>
	<% @settings_collection.categories.each_with_index do |(category, settings), index| %>
		<% t.tab category.to_sym, t("activerecord.attributes.ric_settings/settings_collection.category_values.#{category}") do %>
			<% 
				columns = {}
				settings.each do |setting_key| 
					columns[setting_key] = { type: @settings_collection.settings[setting_key.to_sym][:kind], column_label: t("activerecord.attributes.ric_settings/settings_collection.#{setting_key}") }
				end
			%>
			<%= rug_show_table_for(@settings_collection, columns) %>
		<% end %>
	<% end %>
<% end %>
