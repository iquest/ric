<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_show_table_for(@menu, { 
		key: :string,
		name: :string,
	}) %>

	<h3><%= t("headers.ric_website.admin_menus.pages") %></h3>

	<%= rug_hierarchical_index_table_for(@menu.pages.order(lft: :asc), { 
		title: :string,
		url: :string
	}, paths: {
		show: :page_path,
	} ) %>

<% end %>