<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_hierarchical_index_table_for(@pages, { 
		title: :string,
		url: :string,
		menus: { type: :has_many, label: :name, path: "ric_website_admin.menu_path" }
	}, paths: {
		show: :page_path,
		edit: :edit_page_path,
		destroy: :page_path,
		move_up: :move_up_page_path,
		move_down: :move_down_page_path,
	}, moving: true, summary: true ) %>
<% end %>