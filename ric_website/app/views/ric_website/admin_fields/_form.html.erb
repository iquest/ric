<%= rug_form_for(@field, 
	create_path: lambda { ric_website_admin.structure_fields_path(@structure) }, 
	update_path: lambda { |field| ric_website_admin.structure_field_path(@structure, field) }
) do |f| %>
	<%= f.text_input_row :name %>
	<%= f.text_input_row :ref %>
	<%= f.picker_row :kind %>
	<%= f.token_input_row :enum_id, ric_website_admin.search_enums_path, as: :enum, value_attr: :id, label_attr: :name, limit: 1 %>
	<%= f.checkbox_row :include_in_url %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>