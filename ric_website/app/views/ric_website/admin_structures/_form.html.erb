<%= rug_form_for(@structure, 
	create_path: "ric_website_admin.structures_path", 
	update_path: "ric_website_admin.structure_path"
) do |f| %>
	<%= f.text_input_row :name %>
	<%= f.text_input_row :ref %>
	<%= f.text_input_row :description %>
	<%= f.text_input_row :icon %>
	<%= f.checkbox_row :show_in_navigation %>
	<%= f.checkbox_row :is_navigable %>
	<%= f.checkbox_row :has_attachments %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>