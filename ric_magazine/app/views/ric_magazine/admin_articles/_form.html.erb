<%= rug_form_for(@article, create_url: :articles_path, update_url: :article_path) do |f| %>
	<%= f.datetime_picker_row :published_at %>
	<%= f.text_input_row :title, :text_field %>
	<%= f.text_area_row :perex %>
	<%= f.text_area_row :content %>
	<%= f.text_input_row :keywords, :text_field %>
	<%= f.text_input_row :description, :text_field %>
	<%= f.text_input_row :authors, :text_field %>
	<%= f.text_input_row :garantors, :text_field %>
	<%= f.primary_button_row :submit %>
<% end %>
