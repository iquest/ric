<%= render partial: "ruth_admin/components/page_header" %>
<%= rug_show_table_for(@product_teaser, { 
	name: :string,
	key: :enum
}) %>

<% if @product_teaser.products.count > 0 %>
	<h3><%= t("headers.ric_assortment.admin_product_teasers.products") %></h3>
	<%= rug_index_table_for(@product_teaser.products.order(position: :asc), { 
		name: :string,
		catalogue_number: :string,
		ean: :string
	}, paths: {
		show: :product_path,
		destroy: lambda { |product| unbind_product_product_teaser_path(id: @product_teaser.id, product_id: product.id) }
	}) %>
<% end %>
