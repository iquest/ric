<%= rug_form_for(@product_teaser, 
	create_path: :product_teasers_path, 
	update_path: :product_teaser_path
) do |f| %>
	<%= f.text_input_row :name %>
	<%= f.picker_row :key %>
	<%= f.token_input_row :product_ids, ric_assortment_admin.search_products_path, as: :products, value_attr: :id, label_attr: :name_with_category %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
