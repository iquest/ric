<%= rug_index_table_for(@product.product_attachments, { 
	title: :string,
	file: :file
}, paths: {
	show: :product_attachment_path,
}, actions: {
	destroy_attachment: { path: lambda { |product_attachment| ric_assortment_admin.products_product_attachment_path(@product, product_attachment_id: product_attachment.id) }, method: "delete", icon: "chain-broken", style: "danger" },
	destroy: { path: "ric_assortment_admin.product_attachment_path" },
}, global_actions: {
	new: { label: t("headers.ric_assortment.admin_product_attachments.new"), path: lambda { ric_assortment_admin.new_product_attachment_path(product_id: @product.id) } },
	edit_attachments: { label: t("headers.ric_assortment.admin_products_product_attachments.edit"), path: lambda { |unused| ric_assortment_admin.edit_products_product_attachment_path(@product) }, icon: "link", style: "primary" },
}) %>