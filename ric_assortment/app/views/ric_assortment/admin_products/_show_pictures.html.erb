<%= rug_picture_index_table_for(@product.product_pictures.order(position: :asc), { 
	picture: { type: :picture, thumb_style: :thumb },
	title: :string,
}, paths: {
	new: lambda { new_product_product_picture_path(@product) },
	edit: lambda { |product_picture| edit_product_product_picture_path(@product, product_picture) },
	move: lambda { |product_picture, relation, destination_id| move_product_product_picture_path(@product, product_picture, relation, destination_id) },
	destroy: lambda { |product_picture| product_product_picture_path(@product, product_picture) },
}, moving: true) %>
