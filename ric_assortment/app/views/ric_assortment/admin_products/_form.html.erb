<%= rug_form_for(@product, create_url: :products_path, update_url: :product_path) do |f| %>
	<% if @product.class.parts[:identification] && @product.class.parts[:identification].include?(:form) %>
		<%= render partial: "form_identification", locals: { f: f } %>
	<% end %>
	<% tabs = rug_tabs %>
	<% @product.class.parts.select { |part, appearences| part != :identification }.each do |part, appearences| %>
		<% if appearences.include?(:form) %>
			<% tabs.tab part, t("headers.ric_assortment.admin_products.#{part.to_s}") do %>
				<%= render partial: "form_#{part.to_s}", locals: { f: f } %>
			<% end %>
		<% end %>
	<% end %>
	<%= tabs.render(header_style: "pills", header_class: "hr-divider-content hr-divider-nav", header_container_class: "hr-divider") %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
