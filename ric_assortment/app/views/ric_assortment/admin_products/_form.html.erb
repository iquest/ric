<%= rug_form_for(@product, create_url: :products_path, update_url: :product_path) do |f| %>
	<section class="tabs pill">
		<ul class="tab-nav">
			<% @product.class.parts.each do |part| %>
				<li class="<%= (part == :identification ? "active" : "") %>"><a href="#"><%= t("headers.ric_assortment.admin_products.#{part.to_s}") %></a></li>
			<% end %>
		</ul>
		<% @product.class.parts.each do |part| %>
			<div class="tab-content <%= (part == :identification ? "active" : "") %>">
				<h3><%= t("headers.ric_assortment.admin_products.#{part.to_s}") %></h3>
				<%= render partial: "form_#{part.to_s}", locals: { f: f } %>
			</div>
		<% end %>
	</section>
	<%= f.primary_button_row :submit %>
<% end %>
