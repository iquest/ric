<%= rug_form_for(@product_category, 
	create_path: :product_categories_path, 
	update_path: :product_category_path
) do |f| %>
	<%= f.text_input_row :name %>
	<%= f.picker_row :parent_id, @product_category.available_parents, :id, :name_with_depth, enable_null: true %>
	<%= f.array_row :default_attributes %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
