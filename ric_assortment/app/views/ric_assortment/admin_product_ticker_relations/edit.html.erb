<%= render layout: "ric_admin/layouts/with_right_side" do %>
	
	<%= rug_form_for(@product_ticker, url: product_ticker_relation_path(@product_ticker)) do |f| %>

		<%
			columns = RugBuilder::TableBuilder::Columns.new(name: :string, catalogue_number: :string, ean: :string)
			columns.add_column_by_block(:checkbox) do |product|
				check_box_tag "product_ticker[products][#{product.id.to_s}]", "1", (@product_ticker.product_ids.include?(product.id))
			end
		%>
		<%= rug_index_table_for(@products, columns) %>

		<%= f.primary_button_row :submit %>
	<% end %>

<% end %>