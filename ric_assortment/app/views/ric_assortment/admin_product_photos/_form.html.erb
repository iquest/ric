<%= rug_form_for(@product_photo, create_url: :product_photos_path, update_url: :product_photo_path) do |f| %>
	<%= f.hidden_field :product_id %>
	<% if @product_photo.config(:picture_croppable) == true %>
		<%= f.dropzone_row :picture, append_columns: { product_id: true }, crop: true %>
		<%= f.crop_row :picture %>
	<% else %>
		<%= f.dropzone_row :picture, append_columns: { product_id: true } %>
	<% end %>
	<%= f.text_input_row :title, :text_field %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>