<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_show_table_for(@product_attachment, { 
		title: :string,
		file: :file
	}) %>

	<% if @product_attachment.products.count > 0 %>
		<h3><%= t("headers.ric_assortment.admin_product_attachments.products") %></h3>

		<%= rug_index_table_for(@product_attachment.products.order(position: :asc).page(params[:page]).per(50), { 
			name: :string,
			catalogue_number: :string,
			ean: :string,
		}, paths: {
			show: :product_path
		}, pagination: true ) %>
	<% end %>

<% end %>