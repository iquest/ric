<%= rug_show_table_for(@product_attachment, { 
	title: :string,
	file: :file
}) %>
<%= rug_index_table_for(@product_attachment.products.order(position: :asc).page(params[:page]).per(50), { 
	name: :string,
	catalogue_number: :string,
	ean: :string,
}, paths: {
	show: "ric_assortment_admin.product_path"
}, actions: {
	destroy_attachment: { path: lambda { |product| ric_assortment_admin.products_product_attachment_path(product, product_attachment_id: @product_attachment.id) }, method: "delete", icon: "chain-broken", style: "danger" }
}, pagination: true, header: [RicAssortment.product_attachment_model.human_attribute_name("products"), :h3]) %>

