<%= rug_form_for(@product_attachment, 
	create_url: :product_attachments_path, 
	update_url: :product_attachment_path
) do |f| %>
	<%= f.dropzone_row :file %>
	<%= f.text_input_row :title, :text_field %>
	<%= f.token_input_row :product_ids, ric_assortment_admin.search_products_path, as: :products, value_attr: :id, label_attr: :name %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
