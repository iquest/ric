<h1>Nová opakovaná událost</h1>

<%= form_for @calendar_event_template, url: ric_calendar.calendar_event_templates_path do |f| %>

	<%= f.fields_for :calendar_data do |cd| %>
		<div class="form-group">
			<%= cd.label "Název události", for: :title %>
			<%= cd.text_field :title, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= cd.label "Popis", for: :description %>
			<%= cd.text_area :description, class: "form-control" %>
		</div>
	<% end %>

	<div class="row">
		<div class="col-sm-4">
			<div class="form-group">
				<%= f.label "Datum od", for: :start_date %>
				<%= f.date_field :start_date, class: "form-control" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-4">
			<div class="form-group">
				<%= f.label "Datum do", for: :end_date %>
				<%= f.date_field :end_date, class: "form-control" %>
			</div>
		</div>
	</div>

	<%= f.submit "Vytvořit", class: "btn btn-primary" %>
<% end %>