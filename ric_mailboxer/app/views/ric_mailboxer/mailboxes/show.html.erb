<%= rug_grid do |g| %>
	<%= g.row do |r| %>
		<%= r.col(3) do %>
			<%= render partial: "ric_mailboxer/conversations/index", locals: {
				owner: @owner,
				conversations: @conversations,
				active_conversation: @conversation,
				options: {}
			} %>
		<% end %>
		<%= r.col(9) do %>
			<% if @conversation %>
				<%= render partial: "ric_mailboxer/conversations/show", locals: {
					owner: @owner,
					conversation: @conversation,
					options: {}
				} %>
			<% else %>

			<% end %>
		<% end %>
	<% end %>
<% end %>