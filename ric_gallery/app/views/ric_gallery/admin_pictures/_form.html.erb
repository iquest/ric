<%= rug_form_for(@gallery_picture, create_url: :pictures_path, update_url: :picture_path) do |f| %>
	<%= f.picker_row :gallery_directory_id, RicGallery.gallery_directory_model.all.order(lft: :asc), :id, :name_with_depth, enable_null: true %>
	<%= f.dropzone_row :picture, append_columns: { gallery_directory_id: true }  %>
	<%= f.text_input_row :title, :text_field %>
	<%= f.primary_button_row :submit %>
<% end %>
