<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_show_table_for(@gallery_directory, {
		name: :string,
		parent: { type: :belongs_to, label: :name, path: :directory_path },
		description: :text,
		picture: { type: :picture, thumb_style: :thumb },
	}) %>

	<% if @gallery_directory.children.count > 0 %>
		<h3><%= t("headers.ric_gallery.admin_directories.children") %></h3>

		<%= rug_index_table_for(@gallery_directory.children.order(lft: :asc), { 
			name: :string,
			description: :text,
		}, paths: {
			show: :directory_path,
			edit: :edit_directory_path,
			destroy: :directory_path
		} ) %>
	<% end %>

	<% if @gallery_directory.gallery_pictures.count > 0 %>
		<h3><%= t("headers.ric_gallery.admin_directories.pictures") %></h3>

		<%= rug_picture_index_table_for(@gallery_directory.gallery_pictures.order(position: :asc), { 
			picture: { type: :picture, thumb_style: :thumb },
			title: :string
		}, paths: {
			show: :picture_path,
			edit: :edit_picture_path,
			destroy: :picture_path
		} ) %>
	<% end %>

<% end %>