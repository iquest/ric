<%= rug_menu_for(@document, options) do |m| %>
	<%= m.show_item nil, lambda { |document| folder_document_path(@document_folder, document) } if can_load? %>
	<%= m.edit_item nil, lambda { |document| edit_folder_document_path(@document_folder, document) } if can_update? %>
	<%= m.destroy_item nil, lambda { |document| folder_document_path(@document_folder, document) } if can_destroy? %>
<% end %>