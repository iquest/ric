<div class="document-listing-folders">

	<% @document_folders.each do |document_folder| %>
		<div class="document-folder" data-mh="document">
			<%= link_to folder_path(document_folder), "data-document-folder-id" => document_folder.id do %>
				<span class="document-mime-type">
					<i class="fas fa-folder fa-3x"></i>
				</span>
				<span class="document-name">
					<%= document_folder.name.to_s.gsub("_", " ") %>
				</span>
			<% end %>
			<div class="document-actions">
				<%= link_to rug_icon(:edit), edit_folder_path(document_folder) if can_update? %>
				<%= link_to rug_icon(:destroy), folder_path(document_folder), method: :delete, data: { confirm: t("general.are_you_sure") } if can_destroy? %>
			</div>
		</div>
	<% end %>

	<% if can_create? %>
		<div class="document-folder document-new" data-mh="document">
			<%= link_to new_folder_path(folder_id: @document_folder) do %>
				<span class="document-mime-type">
					<i class="fas fa-folder fa-3x"></i>
				</span>
				<span class="document-name">
					<%= t("headers.ric_dms.folders.new") %>
				</span>
			<% end %>
		</div>
	<% end %>

</div>