<%= rug_form_for(
	@slug, 
	create_url: :slugs_path, 
	update_url: :slug_path
) do |f| %>
	<%= f.text_input_row :locale %>
	<%= f.text_input_row :original %>
	<%= f.text_input_row :translation %>
	<% if RicUrl.slug_model.config(:use_filter) == true %>
		<%= f.text_input_row :filter %>
	<% end %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
