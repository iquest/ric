<%
	columns = rug_columns
	columns.add_column_by_type(:locale, :string)
	columns.add_column_by_type(:original, :string)
	columns.add_column_by_type(:translation, :string)
	columns.add_column_by_type(:filter, :string) if RicUrl.use_filter == true
%>
<%= rug_index_table_for(@slugs, columns, paths: {
	edit: :edit_slug_path,
	destroy: :slug_path,
}, pagination: true, summary: true ) %>