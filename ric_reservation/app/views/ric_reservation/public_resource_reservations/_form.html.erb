<%= rug_form_for(@reservation, 
	create_url: "ric_reservation_public.resource_reservations_path", 
	update_url: "ric_reservation_public.resource_reservation_path"
) do |f| %>
	<%= f.hidden_field :resource_id %>
	<%= f.date_picker_row :schedule_date %>
	<%= f.time_picker_row :time_from %>
	<%= f.time_picker_row :time_to %>
	<%= f.text_input_row :name %>
	<%= f.primary_button_row :submit, label: (@reservation.new_record? ? t("helpers.submit.reserve") : nil) %>
	<%= f.back_link_button_row %>
<% end %>