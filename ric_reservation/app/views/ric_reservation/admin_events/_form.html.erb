<%= rug_form_for(@event, create_url: "ric_reservation_admin.events_path", update_url: "ric_reservation_admin.event_path") do |f| %>
	<%= f.picker_row :resource_id, RicReservation.resource_model.order(position: :asc), :id, :name %>
	<%= f.text_input_row :name, :text_field %>
	<%= f.picker_row :color %>
	<%= f.datetime_picker_row :from %>
	<%= f.datetime_picker_row :to %>
	<%= f.picker_row :period %>
	<%= f.text_input_row :capacity, :number_field, min: 0 %>
	<% if @resource.config(:state_policy) == "time_fixed" %>
		<% @event.config(:states).each_with_index do |state_spec, index| %>
			<%= f.datetime_picker_row "time_fixed_#{state_spec[:name]}".to_sym if index != 0 %>
		<% end %>
	<% else %>
		<% @event.config(:states).reverse_each_with_index do |state_spec, index| %>
			<%= f.duration_row "time_window_#{state_spec[:name]}".to_sym if index != 0 && index != @event.config(:states).length %>
		<% end %>
	<% end %>
	<%= f.text_input_row :owner_reservation_limit, :number_field %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>
