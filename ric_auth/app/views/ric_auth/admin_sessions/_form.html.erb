<%= rug_form_for(resource, as: resource_name, url: ric_auth_admin.session_path) do |f| %>
	<%= f.text_input_row :email, :email_field %>
	<%= f.text_input_row :password, :password_field %>
	<% if devise_mapping.rememberable? %>
		<%= f.checkbox_row :remember_me %>
	<% end %>
	<%= f.primary_button_row :submit, label: t("devise.action.sign_in") %>
	<% if devise_mapping.recoverable? %>
		<%= f.link_button_row t("devise.action.reset_password").capitalize, ric_auth_admin.new_password_path %>
	<% end %>
<% end %>