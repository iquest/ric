<%= rug_form_for(@user, update_url: lambda { |user| ric_auth_admin.profile_path }) do |f| %>
	<%= f.name_row :name %>
	<% if @product_picture.config(:avatar_croppable) == true %>
		<%= f.dropzone_row :avatar, crop: true %>
		<%= f.crop_row :avatar, label: false %>
	<% else %>
		<%= f.dropzone_row :avatar %>
	<% end %>
	<%= f.text_input_row :email, :email_field %>
	<%= f.primary_button_row :submit, label: t("helpers.submit.update") %>
<% end %>