<%= rug_form_for(resource, as: resource_name, url: ric_auth.registration_path) do |f| %>
	<%= f.name_row :name %>
	<%= f.text_input_row :email, :email_field %>
	<%= f.text_input_row :password, :password_field %>
	<%= f.text_input_row :password_confirmation, :password_field %>
	<%= f.primary_button_row :submit, label: t("devise.action.sign_up") %>
	<%= f.link_button_row t("devise.action.sign_in").capitalize, ric_auth.new_session_path %>
	<% if devise_mapping.recoverable? %>
		<%= f.link_button_row t("devise.action.reset_password").capitalize, ric_auth.new_password_path %>
	<% end %>
<% end %>