<%= rug_form_for(@user, url: ric_auth_public.registration_path) do |f| %>
	<%= f.name_row :name %>
	<%= f.text_input_row :email, :email_field %>
	<%= f.text_input_row :password, :password_field %>
	<%= f.text_input_row :password_confirmation, :password_field %>
	<%= f.primary_button_row :submit, label: t("headers.ric_auth.public_registrations.new") %>
<% end %>