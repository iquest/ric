<%= rug_form_for(@banner, create_url: :banners_path, update_url: :banner_path, html: { :multipart => true }) do |f| %>
	<%= f.picker_row :advertiser_id, RicAdvert.advertiser_model.all.order(name: :asc), :id, :name %>
	<%= f.text_input_row :name, :text_field %>
	<%= f.text_input_row :url, :text_field %>
	<%= f.text_input_row :kind, :text_field %>
	<%= f.text_input_row :image, :file_field %>
	<%= f.text_input_row :valid_from, :date_field %>
	<%= f.text_input_row :valid_to, :date_field %>
	<%= f.text_input_row :priority, :number_field %>
	<%= f.primary_button_row :submit %>
<% end %>