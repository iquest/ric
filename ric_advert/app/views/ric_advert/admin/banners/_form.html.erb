<%= form_for(@banner, url: (@banner.id.nil? ? admin_banners_path : admin_banner_path(@banner)), html: { :multipart => true }) do |f| %>
	
	<%= f.collection_select :advertiser_id, RicAdvert.advertiser_model.all, :id, :name %><br/>
	<%= f.text_field :name %><br/>
	<%= f.text_field :url %><br/>
	<%= f.text_field :kind %><br/>
	<%= f.file_field :image %><br/>
	<%= f.date_field :valid_from %><br/>
	<%= f.date_field :valid_to %><br/>
	<%= f.number_field :priority %><br/>
	<%= f.submit %>

<% end %>