<ul>
	
	<!-- Index -->
	<li><%= link_to "<i class=\"icon-list\"></i>".html_safe + t('general.action.index'), admin_advertisers_path, class: (params[:action] == 'index' ? 'disabled' : '') %></li>
	
	<!-- New -->
	<li><%= link_to "<i class=\"icon-plus\"></i>".html_safe + t('general.action.new'), new_admin_advertiser_path, "data-no-turbolink" => true, class: (params[:action] == 'new' || params[:action] == 'create' ? 'disabled' : '') %></li>
	
	<% if params[:action] == 'show' %>
		
		<!-- Edit -->
		<li><%= link_to "<i class=\"icon-pencil\"></i>".html_safe + t('general.action.edit'), edit_admin_advertiser_path(@advertiser), "data-no-turbolink" => true %></li>
		
		<!-- New banner -->
		<li><%= link_to "<i class=\"icon-plus\"></i>".html_safe + t('general.action.new') + " " + t("activerecord.models.#{RicAdvert.banner_model.model_name.i18n_key}"), new_admin_banner_path(advertiser_id: @advertiser.id), "data-no-turbolink" => true %></li>
		
		<!-- Destroy -->
		<li><%= link_to "<i class=\"icon-trash\"></i>".html_safe + t('general.action.destroy'), admin_advertiser_path(@advertiser), method: :delete, data: { confirm: t('general.are_you_sure', default: "Are you sure?") } %></li>

	<% end %>
	<% if params[:action] == 'edit' || params[:action] == 'update' %>
		
		<!-- Show -->
		<li><%= link_to "<i class=\"icon-search\"></i>".html_safe + t('general.action.show'), admin_advertiser_path(@advertiser) %></li>
		
	<% end %>
</ul>