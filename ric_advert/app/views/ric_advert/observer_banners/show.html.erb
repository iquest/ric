<%= rug_show(@banner) do |t| %>
	<%= t.body do |b| %>
		<%= b.string :name %>
		<%= b.belongs_to :advertiser, type: { label_attr: :name, path: "ric_advert_observer.advertiser_path" } %>
		<%= b.string :url %>
		<%= b.enum :kind %>
		<%= b.file :file %>
		<%= b.enum :file_kind %>
		<%= b.date :valid_from %>
		<%= b.date :valid_to %>
		<%= b.integer :priority %>
		<%= b.integer :impressions %>
		<%= b.integer :clicks %>
	<% end %>
<% end %>

<%= rug_index(@banner_statistics) do |t| %>
	<%= t.body do |b| %>
		<%= b.string :ip %>
		<%= b.integer :impressions %>
		<%= b.integer :clicks %>
	<% end %>
	<%= t.footer do |f| %>
		<%= f.pagination %>
		<%= f.summary %>
	<% end %>
<% end %>
