<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_show_table_for(@banner, { 
		name: :string,
		advertiser: { type: :belongs_to, label: :name, path: "ric_advert_observer.advertiser_path" },
		url: :string,
		kind: :enum,
		file: :file,
		file_kind: :enum,
		valid_from: :date,
		valid_to: :date,
		priority: :integer,
		impressions: :integer,
		clicks: :integer,
	}) %>

	<%= rug_index_table_for(@banner_statistics, { 
		ip: :string,
		impressions: :integer,
		clicks: :integer,
	}, 
	#pagination: true, TODO not working
	summary: true ) %>
<% end %>