<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<table>
		<tbody>
			<tr>
				<td><%= RicAdvert.advertiser_model.human_attribute_name('name').capitalize %></td>
				<td><%= @advertiser.name %></td>
			</tr>
		</tbody>
	</table>

	<table>
		<thead>
			<th><%= RicAdvert.banner_model.human_attribute_name('name').capitalize %></th>
			<th><%= RicAdvert.banner_model.human_attribute_name('kind').capitalize %></th>
		</thead>
		<tbody>
			<tr><td colspan="2"><%= t("activerecord.scopes.#{RicAdvert.banner_model.model_name.i18n_key}.sofar_invalid") %></td></tr>
			<% @advertiser.banners.sofar_invalid(@today).order(name: :asc).each do |banner| %>
				<tr>
					<td><%= link_to banner.name, ric_advert_observer.banner_path(banner) %></td>
					<td><%= banner.kind %></td>
				</tr>
			<% end %>
			<tr><td colspan="2"><%= t("activerecord.scopes.#{RicAdvert.banner_model.model_name.i18n_key}.valid") %></td></tr>
			<% @advertiser.banners.valid(@today).order(name: :asc).each do |banner| %>
				<tr>
					<td><%= link_to banner.name, ric_advert_observer.banner_path(banner) %></td>
					<td><%= banner.kind %></td>
				</tr>
			<% end %>
			<tr><td colspan="2"><%= t("activerecord.scopes.#{RicAdvert.banner_model.model_name.i18n_key}.already_invalid") %></td></tr>
			<% @advertiser.banners.already_invalid(@today).order(name: :asc).each do |banner| %>
				<tr>
					<td><%= link_to banner.name, ric_advert_observer.banner_path(banner) %></td>
					<td><%= banner.kind %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>