<%= rug_menu_for(@user, name: "actions", path_base: "users") do |m| %>
	<%= m.index_item %>
	<%= m.new_item %>
	<%= m.show_item %>
	<%= m.edit_item nil, nil, active: (controller_name == "users" && (action_name == "edit" || action_name == "update")) %>
	<% if @user %>
		<%= m.item t("headers.ric_user.admin_user_passwords.edit"), edit_user_password_path(@user), icon: "lock", active: (controller_name == "user_passwords" && (action_name == "edit" || action_name == "update")) %>
		<%= m.item t("headers.ric_user.admin_user_passwords.regenerate"), regenerate_user_password_path(@user), icon: "lock" %>
	<% end %>
	<%= m.destroy_item %>
<% end %>