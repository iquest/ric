<% if action_name == "index" %>
	<%= rug_form_for(@filter_role, 
		url: filter_roles_path,
		html: { id: "filter_role" }
	) do |f| %>
		<div class="form-inline">
			<%= f.text_input_row :name, :text_field, label: false, placeholder: RicUser.role_model.human_attribute_name(:name) %>
			<%= f.primary_button_row :submit, label: t("helpers.submit.filter") %>
		</div>
	<% end %>
<% end %>
