<%= rug_show_table_for(@league_match, { 
	team1: { type: :belongs_to, label: :name, path: :team_path },
	result1: :integer,
	points1: :integer,
}) %>
<h3><%= t("activerecord.attributes.ric_league/league_match.team2") %></h3>
<%= rug_show_table_for(@league_match, { 
	team2: { type: :belongs_to, label: :name, path: :team_path },
