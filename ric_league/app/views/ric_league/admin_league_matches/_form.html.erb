<%= rug_form_for(@league_match, create_url: :league_matches_path, update_url: :league_match_path) do |f| %>
	<%= f.datetime_picker_row :played_at %>
	<%= f.picker_row :league_season_id, RicLeague.league_season_model.all.order(started_at: :desc), :id, :name, enable_null: true %>
	<%= f.picker_row :league_category_id, RicLeague.league_category_model.all.order(position: :asc), :id, :name, enable_null: true %>
	
	<%= f.text_input_row :place %>
	
	<h3><%= t("activerecord.attributes.ric_league/league_match.team1") %></h3>

	<%= f.picker_row :team1_id, RicLeague.team_model.all.order(position: :asc), :id, :name %>
	<%= f.text_input_row :result1, :number_field %>
	<%= f.text_input_row :points1, :number_field %>
	
	<h3><%= t("activerecord.attributes.ric_league/league_match.team2") %></h3>

	<%= f.picker_row :team2_id, RicLeague.team_model.order(position: :asc), :id, :name %>
	<%= f.text_input_row :result2, :number_field %>
	<%= f.text_input_row :points2, :number_field %>
	<%= f.checkbox_row :overtime %>

	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>