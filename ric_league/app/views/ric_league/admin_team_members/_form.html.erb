<%= rug_form_for(@team_member, create_url: :team_members_path, update_url: :team_member_path) do |f| %>
	<%= f.text_input_row :name %>
	<%= f.picker_row :team_id, RicLeague.team_model.all.order(position: :asc), :id, :name %>
	<%#= f.picker_row :league_category_id, RicLeague.league_category_model.all.order(position: :asc), :id, :name, enable_null: true %>
	<%= f.picker_row :kind %>
	<%= f.text_input_row :role %>
	<%= f.text_input_row :classification %>
	<%= f.text_input_row :dress_number, :number_field %>
	<% if RicLeague.team_model.config(:photo_croppable) == true %>
		<%= f.dropzone_row :photo, append_columns: { team_id: true }, crop: true %>
		<%= f.crop_row :photo %>
	<% else %>
		<%= f.dropzone_row :photo %>
	<% end %>
	<%= f.text_area_row :description %>
	<%= f.primary_button_row :submit %>
	<%= f.back_link_button_row %>
<% end %>