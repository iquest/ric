<%= render partial: "ruth_admin/components/page_header" %>
<section class="tabs pill">
	<ul class="tab-nav">
		<li class="active"><a href="#"><%= t("headers.ric_league.admin_league_seasons.identification") %></a></li>
		<li class=""><a href="#"><%= t("headers.ric_league.admin_league_seasons.teams") %></a></li>
		<li class=""><a href="#"><%= t("headers.ric_league.admin_league_seasons.matches") %></a></li>
	</ul>
	<div class="tab-content active">
		<%= rug_show_table_for(@league_season, { 
			name: :string,
			started_at: :date,
			finished_at: :date,
			active: :boolean
		}) %>
	</div>
	<div class="tab-content">
		<%= rug_index_table_for(@league_season.teams.order(position: :asc), { 
			name: :string,
			key: :string
		}, paths: {
			show: :team_path
		}, summary: true ) %>
	</div>
	<div class="tab-content">
		<%= rug_index_table_for(@league_season.league_matches.order(played_at: :desc), { 
			played_at: :datetime,
			team_names: :string,
			league_category: { type: :belongs_to, label: :name, path: :league_category_path },
			place: :string,
			result: :string,
		}, paths: {
			show: :league_match_path, 
			edit: :edit_league_match_path, 
			destroy: :league_match_path
		}, summary: true ) %>
	</div>
</section>
